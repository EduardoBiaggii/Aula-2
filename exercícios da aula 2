velocidade = int(input("Qual a velocidade do veiculo? "))

if velocidade <= 60:
    print("Você está na velocidade permitida!")
elif velocidade > 60 and velocidade < 80:
    print("Você está em alta velocidade!")
elif velocidade > 80 and velocidade < 120:
    print("Você está em alta velocidade!")
else:
    print("VUADO")


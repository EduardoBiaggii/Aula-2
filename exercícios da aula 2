numero = int(input("Digite um numero? "))

if numero > 0:
    print("Este numero é Pisitivo!")

elif numero == 0:
    print("Este numero é igual a 0!")
elif numero != 0:
    print("Este numero é diferente de 0!")
else:
    print("Este numero é negativo!")
   
